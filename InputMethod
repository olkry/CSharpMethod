//Метод для чтения даных пользователя по запросу.
//Method for reading user data on request.
int ReadData(string msg)
{
      Console.WriteLine(msg);
      return int.Parse(Console.ReadLine() ?? "0");
}

// Компановка строки несколько раз.
// Layout string multiple times.
string Method4(int count, string text)
{
      string result = String.Empty;
      for (int i = 0; i < count; i++)
      {
            result = result + text;
      }
      return result;
}

// Метод сложения последующих чисел
// Method for adding subsequent numbers
long SumSimple(int numA)
{
    long sum = 0;
    for (int i = 1; i <= numA; i++)
    {
        sum += i;
        // analog sum=sum+i;
    }
    return sum;
}

/ Метод сложения последующих чисел по формуле Гауса
// Method for adding the following numbers using the Gauss formula
long SumGausse(int numA)
{
    return ((1 + (long)numA) * (long)numA) / 2;
}